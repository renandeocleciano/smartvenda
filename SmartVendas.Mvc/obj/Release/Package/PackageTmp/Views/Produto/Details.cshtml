@model SmartVendas.Application.ViewModels.ProdutoViewModel

@{
    ViewBag.Title = "Produto - Detalhes";
}


<table class="table table-striped table-bordered" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoProdutoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnidadeMedidaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NcmId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Valor)
            </td>
            <td style="text-align: center">
                @if (Model.Disponivel)
                {
                    @:<span class="label label-table label-success">Sim</span>
                    }
                else
                {
                    @:<span class="label label-table label-danger">Não</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.TipoProduto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.UnidadeMedida.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Ncm.Descricao)
            </td>
            <td style="text-align: center">
                <a href="@Url.Action("Edit", "Produto", new {id = Model.ProdutoId})" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Editar </a>
            </td>
        </tr>
    </tbody>
</table>

<p>
    <a href="@Url.Action("Index", "Produto")" class="btn btn-primary">Voltar</a>
</p>
