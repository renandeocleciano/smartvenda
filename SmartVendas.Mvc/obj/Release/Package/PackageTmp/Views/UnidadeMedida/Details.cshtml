@model SmartVendas.Application.ViewModels.UnidadeMedidaViewModel
@{
    ViewBag.Title = "Unidade de Medida - Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-striped table-bordered" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Unidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Descricao)
                </td>
                <td style="text-align: center">
                    @if (Model.Ativo)
                    {
                        @:<span class="label label-table label-success">Ativo</span>
                    }
                    else
                    {
                        @:<span class="label label-table label-danger">Inativo</span>
                    }
                </td>
                <td style="text-align: center">
                    <a href="@Url.Action("Edit", "UnidadeMedida", new {id = Model.UnidadeMedidaId})" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Editar </a>
                </td>
            </tr>
    </tbody>
</table>


<p>
    <a href="@Url.Action("Index", "UnidadeMedida")" class="btn btn-primary">Voltar</a>
</p>
